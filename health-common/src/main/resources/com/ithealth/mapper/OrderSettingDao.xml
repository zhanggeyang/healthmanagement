<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ithealth.mapper.OrderSettingDao">
    <!--查询是否有相同记录-->
    <select id="queryRecord" parameterType="date" resultType="int">
        SELECT COUNT(*) FROM t_ordersetting WHERE orderDate = #{orderDate}
    </select>

    <!--更新记录-->
    <update id="updateRecord" parameterType="com.ithealth.pojo.OrderSetting">
        UPDATE t_ordersetting SET number = #{number} where orderDate = #{orderDate}
    </update>

    <!--添加预约记录-->
    <insert id="addRecord" parameterType="com.ithealth.pojo.OrderSetting">
        INSERT INTO t_ordersetting
        (orderDate,number,reservations)
        VALUES
        (#{orderDate},#{number},#{reservations})
    </insert>

    <!--根据月份查询当月预约信息-->
    <select id="queryOrderInfo" parameterType="string" resultType="com.ithealth.pojo.OrderSetting">
        SELECT * FROM t_ordersetting WHERE orderDate LIKE "%${value}%"
    </select>

    <!--根据日期查看是否可以预约-->
    <select id="isOrderByDate" parameterType="string" resultType="com.ithealth.pojo.OrderSetting">
        SELECT * FROM t_ordersetting WHERE orderDate = #{orderDate}
    </select>

    <!--更新套餐表表 已预约数量加 1-->
    <update id="updateOrderCount" parameterType="com.ithealth.pojo.OrderSetting">
        UPDATE t_ordersetting SET reservations = #{reservations} WHERE orderDate = #{orderDate}
    </update>
</mapper>